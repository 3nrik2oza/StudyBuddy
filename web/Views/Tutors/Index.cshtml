@model List<web.Controllers.TutorListItemVM>

@{
    ViewData["Title"] = "Tutors";
    List<web.Models.Entities.Subject>? subjects = ViewBag.Subjects as List<web.Models.Entities.Subject>;
    int? selectedSubjectId = ViewBag.SelectedSubjectId as int?;
    var search = ViewBag.Search as string ?? "";
    var isTutor = (ViewBag.IsCurrentUserTutor as bool?) == true;
}

<h2 class="mb-1">Tutors</h2>
<p class="text-muted mb-4">
    See who is offering help and how many help points they have earned.
</p>

<div class="d-flex justify-content-between align-items-end flex-wrap gap-2 mb-3">
    <form method="get" class="row g-2 align-items-end flex-grow-1">
        <div class="col-sm-4 col-md-3">
            <label class="form-label mb-1">Filter by subject</label>
            <select name="subjectId" class="form-select">
                <option value="">All subjects</option>
                @if (subjects != null)
                {
                    foreach (var s in subjects)
                    {
                        <option value="@s.Id" selected="@(selectedSubjectId == s.Id)">
                            @s.Name
                        </option>
                    }
                }
            </select>
        </div>

        <div class="col-sm-5 col-md-5">
            <label class="form-label mb-1">Search</label>
            <input name="search" value="@search" class="form-control" placeholder="Search by name or email..." />
        </div>

        <div class="col-sm-3 col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </div>

        <div class="col-sm-3 col-md-2 d-grid">
            <a class="btn btn-outline-secondary" asp-action="Index">
                Clear
            </a>
        </div>
    </form>

    <div class="d-grid">
        <a asp-action="@(isTutor ? "Requests" : "MyRequests")" class="btn btn-outline-secondary">
            @(isTutor ? "Incoming requests" : "My requests")
        </a>
    </div>
</div>

@if (TempData["ToastMessage"] != null)
{
    <div class="alert alert-success mb-3">@TempData["ToastMessage"]</div>
}

@if (!Model.Any())
{
    <p>No tutors found.</p>
}
else
{
    <div class="row g-3">
        @foreach (var tutor in Model)
        {
            var initial = string.IsNullOrWhiteSpace(tutor.Name)
                ? "?"
                : char.ToUpperInvariant(tutor.Name.Trim()[0]).ToString();

            var hasPic = !string.IsNullOrWhiteSpace(tutor.ProfilePicturePath);

            <div class="col-12 col-md-6 col-lg-4">
                <div class="tutor-card h-100">
                    <div class="d-flex align-items-center mb-3">
                        @if (hasPic)
                        {
                            <div class="tutor-avatar-img">
                                <img src="@tutor.ProfilePicturePath" alt="Tutor picture" />
                            </div>
                        }
                        else
                        {
                            <div class="tutor-avatar">@initial</div>
                        }

                        <div class="ms-3">
                            <h5 class="mb-1">@tutor.Name</h5>
                            <p class="text-muted small mb-0">@tutor.FacultyName</p>
                            @if (!string.IsNullOrWhiteSpace(tutor.Email))
                            {
                                <p class="text-muted small mb-0">@tutor.Email</p>
                            }
                        </div>
                    </div>

                    <p class="text-muted small mb-3">
                        <strong>Subjects:</strong>
                        @if (tutor.Subjects.Any())
                        {
                            @string.Join(", ", tutor.Subjects)
                        }
                        else
                        {
                            <span>No subjects assigned.</span>
                        }
                    </p>

                    <div class="mt-auto d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <span class="tutor-help-badge">
                            ‚≠ê Help points: @tutor.HelpPoints
                        </span>

                        <div class="d-flex gap-2">
                            <a asp-action="Request" asp-route-tutorId="@tutor.Id" class="btn btn-outline-primary btn-sm">
                                Request session
                            </a>

                            <form asp-action="GiveHelpPoint" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="tutorId" value="@tutor.Id" />
                                <input type="hidden" name="subjectId" value="@selectedSubjectId" />
                                <input type="hidden" name="search" value="@search" />
                                <button type="submit" class="btn btn-outline-success btn-sm">
                                    Tutor helped me
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
