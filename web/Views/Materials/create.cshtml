@model web.Models.ViewModels.MaterialCreateVM
@{
    ViewData["Title"] = "Add material";
    var subjects = ViewBag.Subjects as List<web.Models.Entities.Subject>;
    var type = (Model?.Type ?? "link").Trim().ToLowerInvariant();
    var isFile = type == "file";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-7">

            <div class="d-flex align-items-start justify-content-between mb-3">
                <div>
                    <h1 class="h3 mb-1">Add material</h1>
                    <div class="text-muted">Share a link or upload a file for a specific subject.</div>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back</a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control form-control-lg"
                                placeholder="e.g. APS1 summary - sorting" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                placeholder="Short description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Subject</label>
                            <select asp-for="SubjectId" class="form-select">
                                <option value="">-- Select subject --</option>
                                @if (subjects != null)
                                {
                                    foreach (var s in subjects)
                                    {
                                        <option value="@s.Id">@s.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="SubjectId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label d-block mb-2">Type</label>

                            <div class="btn-group w-100" role="group">
                                <input asp-for="Type" type="radio" class="btn-check" id="typeLink" value="link"
                                    checked="@(!isFile)">
                                <label class="btn btn-outline-primary" for="typeLink">Link</label>

                                <input asp-for="Type" type="radio" class="btn-check" id="typeFile" value="file"
                                    checked="@(isFile)">
                                <label class="btn btn-outline-primary" for="typeFile">File</label>
                            </div>

                            <div class="form-text mt-2 text-white">
                                Choose link for external resources or file to upload notes.
                            </div>

                            <span asp-validation-for="Type" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 @(isFile ? "d-none" : "")" id="linkBox">
                            <label asp-for="Url" class="form-label">URL</label>

                            <div class="sb-url-input">
                                <span class="sb-url-prefix ">https://</span>
                                <input asp-for="Url" class="form-control" />
                            </div>

                            <span asp-validation-for="Url" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 @(!isFile ? "d-none" : "")" id="fileBox">
                            <label asp-for="UploadFile" class="form-label">Upload file</label>
                            <input asp-for="UploadFile" type="file" class="form-control" />
                            <div class="form-text text-white">PDF, images, docsâ€¦ (max 15MB)</div>
                            <span asp-validation-for="UploadFile" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg px-4">Save</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const linkBox = document.getElementById("linkBox");
            const fileBox = document.getElementById("fileBox");
            const typeLink = document.getElementById("typeLink");
            const typeFile = document.getElementById("typeFile");
            const urlInput = document.querySelector('[name="Url"]');
            const fileInput = document.querySelector('[name="UploadFile"]');

            function refresh() {
                const isFile = typeFile.checked;
                linkBox.classList.toggle("d-none", isFile);
                fileBox.classList.toggle("d-none", !isFile);

                if (isFile) {
                    if (urlInput) urlInput.value = "";
                } else {
                    if (fileInput) fileInput.value = "";
                }
            }

            typeLink.addEventListener("change", refresh);
            typeFile.addEventListener("change", refresh);
            refresh();
        })();
    </script>
}