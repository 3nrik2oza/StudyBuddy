@model List<web.Controllers.MaterialListItemVM>

@{
    ViewData["Title"] = "Study materials";

    var faculties = ViewBag.Faculties as List<web.Models.Entities.Faculty>;
    var subjects = ViewBag.Subjects as List<web.Models.Entities.Subject>;

    var search = ViewBag.Search as string ?? "";
    var selectedFacultyId = ViewBag.SelectedFacultyId as int?;
    var selectedSubjectId = ViewBag.SelectedSubjectId as int?;
}

<h2 class="sb-page-title mb-1">Study materials</h2>
<p class="sb-page-subtitle text-muted mb-4">
    Browse and share notes, summaries and useful links for your courses.
</p>

<form method="get" class="row g-2 mb-4 align-items-end sb-toolbar">

    <div class="col-sm-4">
        <label class="form-label mb-1">Faculty</label>
        <div class="form-control" style="opacity:.9;">
            @faculties?.FirstOrDefault(f => f.Id == selectedFacultyId)?.Name
        </div>
        <input type="hidden" name="facultyId" value="@selectedFacultyId" />
    </div>

    <div class="col-sm-4">
        <label class="form-label mb-1">Subject</label>
        <select name="subjectId" id="subjectSelect" class="form-select" @(selectedFacultyId.HasValue ? "" : "disabled")>
            <option value="">All subjects</option>
            @if (subjects != null)
            {
                foreach (var s in subjects)
                {
                    <option value="@s.Id" selected="@(selectedSubjectId == s.Id)">
                        @s.Name
                    </option>
                }
            }
        </select>
    </div>

    <div class="col-sm-4">
        <label class="form-label mb-1">Search</label>
        <input type="text" name="search" value="@search" placeholder="Search by title..." class="form-control" />
    </div>

    <div class="col-sm-2 d-grid">
        <button type="submit" class="btn btn-primary mt-2 mt-sm-0">Filter</button>
    </div>

    <div class="col-sm-2 d-grid">
        <a asp-action="Create" class="btn btn-success mt-2 mt-sm-0">Add material</a>
    </div>
</form>

@if (!Model.Any())
{
    <p class="sb-muted">No materials found.</p>
}
else
{
    <div class="row g-3">
        @foreach (var m in Model)
        {
            string cardColorClass;
            string emoji;
            var subject = m.SubjectName ?? "";

            if (subject.Contains("APS", StringComparison.OrdinalIgnoreCase))
            {
                cardColorClass = "material-card-aps";
                emoji = "üíª";
            }
            else if (subject.Contains("baze", StringComparison.OrdinalIgnoreCase) ||
            subject.Contains("db", StringComparison.OrdinalIgnoreCase))
            {
                cardColorClass = "material-card-db";
                emoji = "üìä";
            }
            else if (subject.Contains("algoritm", StringComparison.OrdinalIgnoreCase))
            {
                cardColorClass = "material-card-algo";
                emoji = "‚öôÔ∏è";
            }
            else
            {
                cardColorClass = "material-card-default";
                emoji = "üìò";
            }

            <div class="col-12 col-md-6 col-lg-4">
                <div class="material-card @cardColorClass h-100">
                    <div class="material-card-icon">@emoji</div>

                    <div class="material-card-header text-muted small fw-semibold">
                        @m.SubjectName
                    </div>

                    <h5 class="mt-3 mb-1">@m.Title</h5>

                    <p class="text-muted small mb-3">
                        @(string.IsNullOrWhiteSpace(m.Description) ? "No description provided." : m.Description)
                    </p>

                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        @if (!string.IsNullOrWhiteSpace(m.Type))
                        {
                            <span class="material-type-badge">@m.Type</span>
                        }
                        else
                        {
                            <span></span>
                        }

                        <div class="d-flex gap-2 align-items-center">
                            <form asp-controller="Bookmarks" asp-action="Toggle" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="type" value="1" />
                                <input type="hidden" name="entityId" value="@m.Id" />
                                <input type="hidden" name="returnUrl"
                                    value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="btn btn-outline-secondary btn-sm">Save</button>
                            </form>

                            @if (!string.IsNullOrWhiteSpace(m.Url))
                            {
                                <a href="@m.Url" target="_blank" rel="noopener" class="btn btn-outline-primary btn-sm">
                                    Open
                                </a>
                            }
                            else
                            {
                                <span class="text-muted small">No link</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        const facultySelect = document.getElementById("facultySelect");
        const subjectSelect = document.getElementById("subjectSelect");

        async function loadSubjects(facultyId, keepSelected) {
            subjectSelect.innerHTML = `<option value="">All subjects</option>`;

            if (!facultyId) {
                subjectSelect.disabled = true;
                return;
            }

            subjectSelect.disabled = false;

            const res = await fetch(`@Url.Action("SubjectsByFaculty", "Materials")?facultyId=${facultyId}`);
            if (!res.ok) return;

            const data = await res.json();

            for (const s of data) {
                const opt = document.createElement("option");
                opt.value = s.id;
                opt.textContent = s.name;
                subjectSelect.appendChild(opt);
            }

            if (keepSelected) {
                subjectSelect.value = keepSelected;
            }
        }

        facultySelect.addEventListener("change", () => {
            loadSubjects(facultySelect.value, "");
        });

        const initialFaculty = facultySelect.value;
        const initialSubject = "@(selectedSubjectId?.ToString() ?? "")";
        if (initialFaculty) {
            loadSubjects(initialFaculty, initialSubject);
        }
    </script>
}