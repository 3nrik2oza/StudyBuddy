@model List<web.Models.Entities.News>

@{
    ViewData["Title"] = "Novosti";

    Func<string, string> colorClass = category => category switch
    {
        "Novi materijal" => "news-blue",
        "Update kursa"   => "news-green",
        "Obavijest"      => "news-amber",
        "Istaknuto"      => "news-red",
        _                => "news-blue"
    };
}

<section class="news-section">
    <h2 class="news-title">News</h2>

    <div class="news-list">
        @foreach (var item in Model)
        {
            var cls = colorClass(item.Category ?? "");

            <article class="news-card @cls">
                <div class="news-card-inner">
                    <div class="news-card-header">
                        <div class="news-tag">
                            <span class="news-tag-dot"></span>
                            <span class="news-tag-text">@item.Category</span>
                        </div>
                        <span class="news-date">
                            @item.CreatedAt.ToString("dd. MM. yyyy")
                        </span>
                    </div>

                    <h3>@item.Title</h3>
                    <p>@item.Content</p>

                    @if (!string.IsNullOrWhiteSpace(item.LinkText) &&
                         !string.IsNullOrWhiteSpace(item.LinkUrl))
                    {
                        <a href="@item.LinkUrl" class="news-link">
                            @item.LinkText<span>â†’</span>
                        </a>
                    }
                </div>
            </article>
        }
    </div>
</section>
